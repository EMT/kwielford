{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@kwielford/config": ["../../packages/config/dist/index.d.ts"],
      "@kwielford/core": ["../../packages/core/dist/index.d.ts"],
      "@kwielford/slack": ["../slack/dist/index.d.ts"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "../../packages/config" },
    { "path": "../../packages/core" },
    { "path": "../../apps/slack" }
  ]
}
